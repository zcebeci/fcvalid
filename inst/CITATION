year <- sub("-.*", "", meta$Date) 
note <- sprintf("R package version %s", meta$Version)
textVersion = paste0("Cebeci, Z. (", year,"). fcvalid: Internal Validity Indexes for Fuzzy and Possibilistic Clustering. ", note, ", URL: https://github.com/zcebeci/fcvalid/")
bibentry(textVersion, bibtype = "Manual",
 title = "{fcvalid}: Internal Validity Indexes for Fuzzy and Possibilistic Clustering",
 author = c(person("Zeynel", "Cebeci")),
 year = year,
 note = note, 
 url = "https://github.com/zcebeci/fcvalid/")